                        });
                    } else {
                        const msg = (data && (data.message || data.error)) || `Failed to save (status ${resp.status}).`;
                        Swal.fire({ icon: 'error', title: 'Error', text: msg });
                    }
                } catch (err) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Network error',
                        text: err?.message || 'Something went wrong.'
                    });
                } finally {
                    btn.disabled = false; btn.textContent = 'Submit';
                }
            });
        });
    });
