<script>
    document.addEventListener('DOMContentLoaded', function () {
        const form = document.getElementById('subGroupForm');
        const input = form.querySelector('[name="ReportSubGroupName"]');
        const errorBox = document.getElementById('nameError');

        // sirf letters/numbers. (space allow karni ho to: /^[A-Za-z0-9 ]+$/)
        const onlyAlphaNum = /^[A-Za-z0-9]+$/;

        function setError(msg) {
            errorBox.textContent = msg || "";
            input.classList.toggle('is-invalid', !!msg);
            input.classList.toggle('is-valid', !msg && input.value.trim().length > 0);
        }

        function validateLive() {
            const val = (input.value || '').trim();

            if (!val) {
                setError("SubGroupName is required.");
                return false;
            }
            if (!onlyAlphaNum.test(val)) {
                setError("Format incorrect.");
                return false;
            }
            setError(""); // sab sahi
            return true;
        }

        // 🔴 LIVE VALIDATION: type/blur par turant check
        input.addEventListener('input', validateLive);
        input.addEventListener('blur', validateLive);

        // ✅ SUBMIT FLOW (sirf valid ho to Swal)
        form.addEventListener('submit', function (e) {
            e.preventDefault();
            if (!validateLive()) return;

            Swal.fire({
                icon: 'question',
                title: 'Submit now?',
                text: 'Do you want to create this sub group?',
                showCancelButton: true,
                confirmButtonText: 'Yes',
                cancelButtonText: 'Cancel'
            }).then((res) => {
                if (res.isConfirmed) {
                    Swal.fire({
                        icon: 'success',
                        title: 'OK!',
                        text: 'Submitting...',
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 1200,
                        timerProgressBar: true
                    }).then(() => form.submit());
                }
            });
        });
    });
</script>








